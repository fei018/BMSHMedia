
@section ScriptTop {
    <script>
        function scanSubFolder(path) {

            //if (path == undefined) { path = ''; }

            //let url = window.location.protocol + '//' + window.location.hostname + ":" + window.location.port + window.location.pathname + 'media/list/?path=' + path;

            let url = "/media/list"

            $.get(url, { path: path }, function (data) {
                $('#mediaFileList').html(data);
            }, 'html');
        }
    </script>

    <script>
        function dbclick_media() {
            var touchtime = 0;
            $('#media-folder-item').on("click", function () {
                if (touchtime == 0) {
                    // set first click
                    touchtime = new Date().getTime();
                } else {
                    // compare first click to this click and see if they occurred within double click threshold
                    if (((new Date().getTime()) - touchtime) < 800) {
                        // double click occurred

                        scanSubFolder($(this).attr('data-path'));

                        touchtime = 0;
                    } else {
                        // not a double click so set as a new first click
                        touchtime = new Date().getTime();
                    }
                }
            });
        }
    </script>
}


