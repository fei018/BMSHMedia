@using BMSHMedia.ViewModel.MediaVMs
@model MediaFileVM


<style>
    .media-player-body {
        margin: 10px auto;
        text-align: center;
        width:600px;
        min-height:500px;      
    }

    video {
        width:100%;
        object-fit:fill;
    }

    button.player-close{
        margin-top:20px;      
    }

    @@media all and (max-width:600px){
        .media-player-body {
            margin: 10px auto;
            text-align: center;
            width: 380px;
            min-height: 500px;
        }
    }
</style>

<div class="media-player-body">
    @if (Model.FileType == MediaFileTypeEnum.Audio)
    {
        <audio controls autoplay>
            <source src="@Model.Url" type="@Model.MineType">
            ???
        </audio>
    }

    @if (Model.FileType == MediaFileTypeEnum.Video)
    {
        <video controls autoplay >
            <source src="@Model.Url" type="@Model.MineType" />
            ???
        </video>
    }

    <p>
        @Model.FileName
    </p>
    <button type="button" class="btn btn-light player-close" onclick="window.close();">關閉</button>
</div>
