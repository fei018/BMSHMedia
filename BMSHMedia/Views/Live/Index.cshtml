@model BMSHMedia.ViewModel.SRSVMs.SRSOpenAPIVM
@{
    string playUrl = null;
    string hlsUrl = null;
    try
    {
        playUrl = Model.GetPlayUrl();
        hlsUrl = Model.GetHLSUrl();
    }
    catch (Exception ex)
    {
        <p>@ex.Message</p>
    }
}

