@model BMSHMedia.ViewModel.BaseFormVMs.BaseFormVM
@{
    Layout = "~/Views/Shared/_PortalLayout.cshtml";
    var list = Model.BaseFormList;

    string submitUrl = "/forms/submit";
}

<div class="mt-3">
    <h1>表單列表</h1>
    <hr />
    @foreach (var item in list)
    {
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">
                    <a href="@submitUrl/@item.ID" class="card-link">
                        @item.FormName
                    </a>
                </h5>
            </div>
        </div>      
        <hr />
    }
</div>
