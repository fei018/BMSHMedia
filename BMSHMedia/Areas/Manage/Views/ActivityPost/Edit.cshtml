@model BMSHMedia.ViewModel.ActivityPostVMs.ActivityPostVM
@inject IStringLocalizer<Program> Localizer;
@{
    string editboxId = "tinyeb79b5da49384543ba3b1576e357dbc4";
}


<wt:quote>
    如要取消, 請先 "刪除圖片", 再按 [關閉]<br />
    圖片格式( jpg, jpeg, gif, bmp, png, tif )
</wt:quote>
<br />

<wt:form vm="@Model">
    <wt:row items-per-row="ItemsPerRowEnum.One">
        <wt:textbox field="Entity.Title" />
    </wt:row>

    <wt:row items-per-row="ItemsPerRowEnum.One">
        <wt:multiupload field="Entity.PostAttachList" upload-type="ImageFile" preview-height="100" preview-width="100" upload-subdir="@Model.UploadSubDir" show-preview="true" />
    </wt:row>

    <wt:row items-per-row="ItemsPerRowEnum.One">
        <wt:textarea field="Entity.Text" id="@editboxId"></wt:textarea>
    </wt:row>

    <wt:hidden field="Entity.ID" />
    <wt:row align="AlignEnum.Right">
        <wt:submitbutton text="保存" />
        <wt:closebutton text="關閉" />
    </wt:row>
</wt:form>

<script src="~/tinymce/tinymceinit.js"></script>
<script>
    tinymceinit('#@editboxId')
</script>
