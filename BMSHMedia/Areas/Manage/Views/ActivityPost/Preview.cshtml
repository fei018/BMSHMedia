@model BMSHMedia.ViewModel.ActivityPostVMs.ActivityPostVM

@{
    Layout = "~/Views/Shared/_PortalLayout.cshtml";
    var post = Model.Entity;
    var list = Model.Entity.PostAttachList;
}

<div class="layui-row layui-col-space15">
    <div class="layui-col-sm12">
        @post.Title
    </div>
    @foreach (var item in list)
    {
        <div>
            <img src="@WtmFrameworkApiHelper.GetFile(item.FileId)" />
        </div>
    }
    <div class="layui-col-sm12">
        @post.Text
    </div>
</div>