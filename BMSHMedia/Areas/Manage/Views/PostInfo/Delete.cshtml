@model BMSHMedia.ViewModel.Manage.PostInfoVMs.PostInfoVM
@inject IStringLocalizer<Program> Localizer;

<div style="padding:20px 100px;margin:auto;overflow: auto;">
    <wt:form vm="@Model">
        <wt:quote>@Localizer["Sys.DeleteConfirm"]</wt:quote>
        <wt:row items-per-row="ItemsPerRowEnum.One">
            <wt:display field="Entity.Title" />
        </wt:row>
        <wt:row items-per-row="ItemsPerRowEnum.One">
            <wt:ueditor field="Entity.Content" height="600" />
        </wt:row>
        <wt:hidden field="Entity.ID" />
        <wt:row align="AlignEnum.Right">
            <wt:submitbutton theme=" ButtonThemeEnum.Warm" text="@Localizer["Sys.Delete"]" />
            <wt:closebutton />
        </wt:row>
    </wt:form>
</div>

