@model BMSHMedia.ViewModel.SRSVMs.SRSOpenAPIVM

<wt:form vm="@Model">
    <wt:row items-per-row="ItemsPerRowEnum.One" space="15">
        <wt:textbox field="RTMPUrl_View" readonly id="RTMPUrl" />
        <wt:button text="Copy" click="copyRTMPUrl();" />
        <wt:textbox field="LiveKey_View" readonly id="LiveKey" />
        <wt:button text="Copy" click="copyLiveKey();" />
    </wt:row>

    <wt:row align="AlignEnum.Right">     
        <wt:closebutton />
    </wt:row>
</wt:form>

<script>
    function copyRTMPUrl() {
        let key = document.getElementById('RTMPUrl');
        navigator.clipboard.writeText(key.value);
    }

    function copyLiveKey(btn){
        let key = document.getElementById('LiveKey');
        navigator.clipboard.writeText(key.value);
    }
</script>